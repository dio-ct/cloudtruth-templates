apiVersion: v1
kind: ConfigMap
metadata:
  name: {{name}}
data:
  # property-like keys; each key maps to a simple value
  player_initial_lives: "{{player_initial_lives}}"
  ui_properties_file_name: "{{ui_properties_file_name}}"

  # file-like keys
  game.properties: |
    enemy.types={{enemy.types}}
    player.maximum-lives={{player.maximum-lives}}    
  user-interface.properties: |
    color.good={{color.good}}
    color.bad={{color.bad}}
    allow.textmode={{allow.textmode}}